[server]
SECRET_KEY = change-this-to-a-random-string
DEBUG = False
# Production settings (make run)
HOST = 0.0.0.0
PORT = 5001
# Development settings (make rundev)
DEV_HOST = 127.0.0.1
DEV_PORT = 5001

[database]
PATH = instance/sharepoint_mirror.sqlite3

[blobs]
DIRECTORY = instance/blobs

[sharepoint]
# Azure AD App Registration credentials
TENANT_ID = your-tenant-id
CLIENT_ID = your-client-id
CLIENT_SECRET = your-client-secret
# SharePoint site to mirror
SITE_HOSTNAME = contoso.sharepoint.com
SITE_PATH = /sites/Documents
# Optional: specific document library name (defaults to all libraries)
# LIBRARY_NAME = Documents

[sync]
# Download timeout in seconds
DOWNLOAD_TIMEOUT = 300
# Maximum file size in MB (files larger than this will be skipped)
MAX_FILE_SIZE_MB = 100
# File extensions to include (comma-separated, empty = all)
# INCLUDE_EXTENSIONS = .pdf,.docx,.xlsx,.pptx
# File extensions to exclude (comma-separated)
# EXCLUDE_EXTENSIONS = .exe,.zip
# Subdirectory paths to sync (multi-line, one per line; empty = all)
# Only items under these paths are synced. Boundary-aware: /Projects/Active
# matches /Projects/Active/file.pdf but not /Projects/ActiveOld/file.pdf
# INCLUDE_PATHS =
#     /Projects/Active
#     /Reports/2024
# Glob patterns for file filtering (multi-line, one per line; ! prefix = exclude)
# First-match-wins. If only excludes, default is include. If any includes, default is exclude.
# Supports fnmatch (*.pdf) and ** recursive globs (**/drafts/*.docx)
# PATH_PATTERNS =
#     *.pdf
#     *.docx
#     !**/~$*
#     !**/drafts/**
# Metadata-only mode: record document metadata without downloading content.
# Useful for exploring a SharePoint site before configuring path filters.
# Cannot be used with VERIFY_QUICKXOR_HASH.
# METADATA_ONLY = False
# Verify downloaded file integrity using QuickXorHash from SharePoint metadata.
# The hash is always stored regardless of this setting.
# VERIFY_QUICKXOR_HASH = False

# Enable when running behind a reverse proxy (Caddy, nginx, etc.)
#[proxy]
#X_FORWARDED_FOR = 1
#X_FORWARDED_PROTO = 1
#X_FORWARDED_HOST = 1
#X_FORWARDED_PREFIX = 0
